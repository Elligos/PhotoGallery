<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"

        android:orientation="vertical">

        <EditText
            android:id="@+id/et_photo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:editable="false"
            android:ems="10"
            android:singleLine="true"
            android:text="Title: "
            android:textColor="@android:color/background_light"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/et_photo_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:editable="false"
            android:ems="10"
            android:singleLine="true"
            android:text="Author:"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"/>

        <ImageView
            android:id="@+id/image_view_fullscreen_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            app:srcCompat="@android:color/transparent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/colorControlHighlight"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_save_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_file_download_white_48dp"/>

        <ImageButton
            android:id="@+id/btn_go_to_photo_web_source"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_public_white_48dp"/>

        <ImageButton
            android:id="@+id/btn_close_fullscreen_photo_dialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_clear_white_48dp"/>
    </LinearLayout>
</LinearLayout>